@model UI.Models.PolicyViewModel
    <style>
        body{
            background-color:lightgray;
        }
    </style>

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Your existing head content remains unchanged -->
</head>
<body>
    <h2>Add Policy</h2>

    @using (Html.BeginForm("AddPolicy", "Policy", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <div>
            <label for="PolicyNumber">Policy Number:</label>
            @Html.TextBoxFor(model => model.PolicyNumber)
            @Html.ValidationMessageFor(model => model.PolicyNumber)
        </div>



        <div>
            <label for="AppliedDate">Date Of Creation:</label>
            @Html.TextBoxFor(model => model.DateOfCreation, new { type = "date" })
            @Html.ValidationMessageFor(model => model.DateOfCreation)
        </div>

        <div>
            <label for="Category">Category:</label>
            @Html.TextBoxFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>

        <div>
            <label for="PolicyType">Policy Type:</label>
            @Html.TextBoxFor(model => model.PolicyType)
            @Html.ValidationMessageFor(model => model.PolicyType)
        </div>

        <div>
            <label for="Price">Price:</label>
            @Html.TextBoxFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>


        <div>
            <input type="submit" value="Submit" />
        </div>
    }
</body>
</html>



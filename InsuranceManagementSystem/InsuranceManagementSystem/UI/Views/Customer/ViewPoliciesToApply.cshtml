
@{
    ViewBag.Title = "ViewPoliciesToApply";
}

﻿@model List<DAL.Policy>

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: lightgray;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .navbar-nav.flex-grow-1 {
            display: none;
        }

        #right-nav {
            display: block;
        }

        #admin-dash {
            display: none;
        }
        h2 {
            color: black; 
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #343a40;
            color: #fff;
        }

        tbody tr:hover {
            background-color: #f0f8ff; 
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #343a40;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3; 
            }
        td {
            background-color: #8faebd;
        }
    </style>
   
</head>
<body>
    <h2>List of Policies</h2>

    <table>
        <tr>
            <th>Policy ID</th>
            <th>Policy Number</th>
            <th>Date Of Creation</th>
            <th>Category</th>
            <th>Policy Type</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
        @foreach (var policy in Model)
        {
            <tr>
                <td>@policy.PolicyId</td>
                <td>@policy.PolicyNumber</td>
                <td>@policy.DateOfCreation.ToShortDateString()</td>
                <td>@policy.Category</td>
                <td>@policy.PolicyType</td>
                <td>@policy.Price</td>
                <td>
                    @using (Html.BeginForm("Apply", "Customer", FormMethod.Post))
                    {
                        @Html.Hidden("policyId", policy.PolicyId)
                        <input type="submit" value="Apply" />
                    }
                </td>
            </tr>
        }
    </table>
</body>
</html>

